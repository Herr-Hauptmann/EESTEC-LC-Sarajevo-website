@using EESTEC.Helpers
@model Pager;
@{

}
<div class="container">

    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="LocalEvent" asp-action="Index" asp-route-page="1">Prva</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="LocalEvent" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">Prethodna</a>
                </li>
            }
            @for (var p = Model.StartPage; p <= Model.EndPage; p++)
            {
                <li class="page-item" @(p ==Model.CurrentPage ? "active" : "")>
                    <a class="page-link" asp-controller="LocalEvent" asp-action="Index" asp-route-page="@p">@p</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="LocalEvent" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Sljedeća</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="LocalEvent" asp-action="Index" asp-route-page="@(Model.TotalPages)">Posljednja</a>
                </li>
            }
        </ul>
    }
</div>